# ========== DATABASE CONFIGURATION ==========
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/<database_name>?retryWrites=true&w=majority
# Thay thế <username>, <password>, <database_name> bằng thông tin thật của bạn

# ========== SERVER CONFIGURATION ==========
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# ========== API CONFIGURATION ==========
BASE_URL=http://localhost:3000
API_TIMEOUT=30
UPLOAD_TIMEOUT=60

# ========== JWT CONFIGURATION ==========
JWT_SECRET=your_super_secret_jwt_key_change_this_to_secure_random_string
JWT_EXPIRE=7d

# ========== CORS CONFIGURATION ==========
CORS_ORIGIN=http://localhost:59500,http://localhost:3000
# Thêm các origin cần thiết, phân cách bằng dấu phẩy

# ========== UPLOAD CONFIGURATION ==========
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg